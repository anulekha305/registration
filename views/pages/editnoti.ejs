<% layout('/layouts/boilerplate') %>

<div class="editnoti">

      <div class="container mt-5">
        <h1 class="mb-4 text-primary">Edit Notification</h1>

        <form action="/notifications/<%= notification._id %>?_method=PUT" method="POST" class="border p-4 rounded shadow bg-light">
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" id="title" name="title" value="<%= notification.title %>" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="content" class="form-label">Content:</label>
                <textarea id="content" name="content" class="form-control" rows="5" required><%= notification.content %></textarea>
            </div>

            <button type="submit" class="btn btn-success">Update</button>
            <a href="/notifications/manage" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
    </div>