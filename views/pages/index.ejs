<% layout('/layouts/boilerplate') %>

<body>


<!-- Bootstrap Hero Section -->
<section class="hero bg-primary text-white text-center py-5 ">
    <div class="container w-8">
      <h1 class="display-4 fw-bold">Welcome to our University</h1>
      <p class="lead">Enroll for a brighter future.</p>
      <a href="/idx/adv" class="btn btn-light btn-lg mt-3">Advice your course</a>
    </div>
  </section>
  
<!-- Features Section -->
<!-- Bootstrap Features Section -->
<section class="features py-5">
  <div class="container">
    <div class="row g-4">

      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-body">
            <h5 class="card-title">
              <a href="/recommendations/view" class="stretched-link text-decoration-none">Recommendation</a>
            </h5><br>
            <p class="card-text">Secure login for students, faculty, and admin.</p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-body">
            <h5 class="card-title">
              <a href="/idx/mark" class="stretched-link text-decoration-none">Marks</a>
            </h5><br>
            <p class="card-text">View available marks</p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-body">
            <h5 class="card-title">
              <a href="/idx/classschedu" class="stretched-link text-decoration-none">Class Scheduling</a>
            </h5><br>
            <p class="card-text">Select courses based on availability and your schedule.</p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-body">
            <h5 class="card-title">
              <a href="/idx/admin" class="stretched-link text-decoration-none">Admin Panel</a>
            </h5><br>
            <p class="card-text">Stay updated with registration deadlines, course availability, and announcements.</p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-body">
            <h5 class="card-title">
              <a href="/idx/fees" class="stretched-link text-decoration-none">Fees</a>
            </h5><br>
            <p class="card-text">Manage course fees</p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card h-100 text-center">
          <div class="card-body">
            <h5 class="card-title">
              <a href="/notifications" class="stretched-link text-decoration-none">Notification</a>
            </h5><br>
            <p class="card-text">Generate reports on student enrollment, academic performance, and trends.</p>
          </div>
        </div>
      </div>
    </div>
   
  </div>
</section> 

  <!-- Bootstrap Map and Image Section -->
<section class="py-5 bg-white">
    <div class="container">
      <div class="row g-4 align-items-center">
        
        <!-- Map Column -->
        <div class="col-md-6">
          <div class="ratio ratio-1x1">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3683.533448107702!2d88.36463917491534!3d22.577849134673047!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3a027713d37a6b4b%3A0x6c235b5aa69333a8!2sCalcutta%20University!5e0!3m2!1sen!2sin!4v1696512305816!5m2!1sen!2sin" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy">
            </iframe>
          </div>
        </div>
  
        <!-- Image Column -->
        <div class="col-md-6">
          <img 
            src="https://c8.alamy.com/comp/T5ENNT/the-sanskrit-college-and-university-1-bankim-chatterjee-street-kolkata-india-T5ENNT.jpg" 
            alt="Conference Room" 
            class="img-fluid rounded shadow">
        </div>
  
      </div>
    </div>
  </section>
  

</body>
