<% layout('/layouts/boilerplate') %>

<body class="bg-light">
<div class="contain">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          
          <div class="card shadow-lg">
            <div class="card-body">
              <h3 class="card-title mb-4 text-center">Fees Payment</h3>
              
              <!-- First Form -->
              <div id="initial-form">
                <div class="mb-3">
                  <label for="studentName" class="form-label">Student Name</label>
                  <input type="text" class="form-control" id="studentName" required>
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" required>
                </div>
                <div class="mb-3">
                  <label for="courseName" class="form-label">Course Name</label>
                  <input type="text" class="form-control" id="courseName" required>
                </div>
                <div class="mb-3">
                  <label for="amount" class="form-label">Amount</label>
                  <input type="number" class="form-control" id="amount" required>
                </div>
                <button class="btn btn-primary w-100" onclick="proceedToPayment()">Proceed to Payment</button>
              </div>
    
              <!-- Payment Form (Hidden initially) -->
              <div id="payment-form" class="mt-4" style="display: none;">
                <div class="mb-3">
                  <label for="cardNumber" class="form-label">Card Number</label>
                  <input type="text" class="form-control" id="cardNumber" maxlength="12" required>
                </div>
                <div class="mb-3">
                  <label for="expiryDate" class="form-label">Expiry Date (MM/YY)</label>
                  <input type="text" class="form-control" id="expiryDate" placeholder="MM/YY"  maxlength="4" required>
                </div>
                <div class="mb-3">
                  <label for="cvv" class="form-label">CVV</label>
                  <input type="password" class="form-control" id="cvv" maxlength="3" required>
                </div>
                <button class="btn btn-success w-100" onclick="completePayment()">Complete Payment</button>
              </div>
    
              <!-- Message -->
              <div id="message" class="text-center mt-3"></div>
    
            </div>
          </div>
    
        </div>
      </div>
    </div>
</div>
</body>    